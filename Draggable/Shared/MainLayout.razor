@inherits StatefulLayoutComponentBase


<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
            @if(State.Favorite != null)
            {
                <a href="@($"/todo/{State.Favorite.Id}")">Favorite @State.Favorite.Id</a>
            }
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {

    private TodoState State => AppStore.GetState<TodoState>();
}
